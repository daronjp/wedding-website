<% if flash[:error] %>
  <%= flash[:error] %><br>
<% end %>

<% if flash[:notice] %>
  <%= flash[:notice] %><br>
<% end %>

<% if flash[:not_authorized] %>
  <%= flash[:not_authorized] %><br>
<% end %>


<% if current_visitor %>
  You are logged in!
  <% else %>
      
  <%= form_tag sessions_path do %>

    <p>
        <%= text_field_tag(:group, "guest", placeholder: "guest") %>
      <%= password_field_tag(:password, "", placeholder: "Password") %> <%= submit_tag "Log in" %>
    </p>
    
  <% end %>
  
<% end %>


<div class="hero-unit">
    <h1 class="headline large">Eimee <span class="highlight">&amp;</span> Daron</h1>

    <%= image_tag 'hero.jpg' %><p><h2 class="headline date">8.8.15<br>Portland, Oregon</h2></p>

</div>

